generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
  previewFeatures = ["relationJoins"]
  moduleFormat    = "cjs"
}

datasource db {
  provider = "mongodb"
  url      = env("CORE_SERVICE_MONGODB")
}

enum MenuType {
  link
  component
}

model Menu {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  status   String @default("active")
  version  Int    @default(1)
  tenantId String @default("system")

  label String   @unique
  type  MenuType

  to         String?
  component  String?
  classNames String[]
  roles      String[] @default([])
  order      Int
}

model Route {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  status   String @default("active")
  version  Int    @default(1)
  tenantId String @default("system")

  parentId String? @db.ObjectId
  parent   Route?  @relation("RouteTree", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Route[] @relation("RouteTree")

  path    String?
  element String  @unique
  handle  Json?

  order Int?

  @@index([parentId])
}
